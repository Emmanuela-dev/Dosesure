rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user data
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    // Helper function to check if user is a clinician
    function isClinician() {
      return isAuthenticated() && getUserData(request.auth.uid).role == 1;
    }
    
    // Helper function to check if clinician can access patient data
    function canAccessPatientData(patientId) {
      return isClinician() && getUserData(patientId).doctorId == request.auth.uid;
    }
    
    // User documents - ALLOW READ FOR DOCTOR DROPDOWN DURING REGISTRATION
    match /users/{userId} {
      // Allow anyone to read users (needed for doctor selection during patient registration)
      allow read: if true;
      
      // Allow authenticated users to write their own profile
      allow write: if isOwner(userId);
      
      // Allow user creation during registration (when auth uid matches document id)
      allow create: if request.auth.uid == userId;
      
      // Allow listing users (for clinician lookup)
      allow list: if true;
    }
    
    // Drugs collection - available to everyone for reading
    match /drugs/{drugId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Medication documents
    match /medications/{medicationId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }
    
    // Dose log documents
    match /doseLogs/{doseLogId} {
      allow read, write: if isOwner(resource.data.userId);
      allow read: if canAccessPatientData(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Side effect documents
    match /sideEffects/{sideEffectId} {
      allow read, write: if isOwner(resource.data.userId);
      allow read: if canAccessPatientData(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Herbal use documents
    match /herbalUses/{herbalUseId} {
      allow read, write: if isOwner(resource.data.userId);
      allow read: if canAccessPatientData(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
  }
}
